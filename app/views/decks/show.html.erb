<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<%= render 'header' %>
<div class = "secondheader"><h2 class = "secondheader">All User's Decks</h2> </div>


<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @deck.name %>
</p>

<h2>Phones</h2>
<% if @deck.cards.any? %>
  <ul>
    <% for card in @deck.cards %>
      <li><%= card.term %> (<%= card.definition %>)</li>
    <% end %>
  </ul>
<% else %>
  <p>This person has no phones yet.</p>
<% end %>



<%= link_to 'Edit', edit_deck_path(@deck) %> |
<%= link_to 'Back', decks_path %>
