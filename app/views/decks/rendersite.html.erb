};


 selectedTerms = []

if(!window.Kolich){
  Kolich = {};
}

Kolich.Selector = {};
Kolich.Selector.getSelected = function(){
  var t = '';
  if(window.getSelection){
    t = window.getSelection();
  }else if(document.getSelection){
    t = document.getSelection();
  }else if(document.selection){
    t = document.selection.createRange().text;
  }
  return t;
}

Kolich.Selector.mouseup = function(){
  var st = Kolich.Selector.getSelected();
  if(st!=''){
    var selection = $('#addingterms').append('<br /><span class="label">Term:</span> <span class="justadded">' + st + ' </span>');
    var newTerm = $('.justadded').first().text(); 
    selectedTerms.push(selection.text());
    getTranslation(newTerm); 
    $('.justadded').removeClass('justadded');
  }
}

$(document).ready(function(){
  $(document).bind("mouseup", Kolich.Selector.mouseup);
});

